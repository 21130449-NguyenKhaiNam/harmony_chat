<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MessageOptions">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17 Apr 6:12 AM"
                android:textSize="12dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00111111"
                android:drawableRight="@drawable/akar_icons__arrow_back"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:text="Trả lời"
                android:textColor="#0C2333"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/forward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00111111"
                android:drawableRight="@drawable/mingcute__send_line"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:text="Chuyển tiếp"
                android:textColor="#0C2333"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00111111"
                android:drawableRight="@drawable/uil__copy"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:text="Sao chép"
                android:textColor="#0C2333"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/recall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00111111"
                android:drawableRight="@drawable/trash1"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:text="Thu hồi"
                android:textSize="16dp"
                android:textColor="#FF0000"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>