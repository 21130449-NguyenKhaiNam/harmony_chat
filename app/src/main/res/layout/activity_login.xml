<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fill"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/avatarImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/logo_black" />


    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/editEmail"
        style="@style/input_style"
        android:layout_marginTop="60dp"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="text"
        android:textColorHint="@color/primary_white" />

    <EditText
        android:id="@+id/editPassword"
        style="@style/input_style"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/password"
        android:drawableRight="@drawable/unhide"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="@color/primary_white" />

    <TextView
        android:id="@+id/forgetPasswordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/forget"
        android:textColor="@color/primary_white"
        android:textSize="@dimen/text_2" />

    <Button
        android:id="@+id/loginBtn"
        style="@style/long_input_style"
        android:layout_marginTop="20dp"
        android:text="@string/sign_in"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/login_other"
        android:textColor="@color/primary_white"
        android:textSize="@dimen/text_2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/googleBtn"
            style="@style/social_button_style"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:src="@drawable/google" />

        <ImageButton
            android:id="@+id/facebookBtn"
            style="@style/social_button_style"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:src="@drawable/facebook" />

        <ImageButton
            android:id="@+id/githubBtn"
            style="@style/social_button_style"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:src="@drawable/github" />
    </LinearLayout>

    <Button
        android:id="@+id/gotoSignupBtn"
        style="@style/second_long_input_style"
        android:layout_marginTop="60dp"
        android:text="@string/register"
        android:textAllCaps="false" />


</LinearLayout>