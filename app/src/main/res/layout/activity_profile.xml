<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/profile_margin_left"
    android:layout_marginRight="@dimen/profile_margin_right"
    android:weightSum="10"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/con_header"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/profile_header_margin_top"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_height_header_before"
            android:layout_marginBottom="@dimen/profile_height_header_before_margin_bottom"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/profile_width_back"
                android:layout_height="@dimen/profile_height_back"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:contentDescription="@string/back"
                android:scaleType="fitCenter"
                android:src="@drawable/less_than" />

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/width_avatar_normal"
                android:layout_height="@dimen/height_avatar_normal"
                android:layout_weight="3"
                android:background="@drawable/background_oval"
                android:scaleType="fitCenter"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:text="@string/example_username" />

            <ImageButton
                android:id="@+id/btn_edit_username"
                android:layout_width="@dimen/profile_width_edit"
                android:layout_height="@dimen/profile_height_edit"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:contentDescription="@string/edit"
                android:scaleType="fitCenter"
                android:src="@drawable/edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_height_header_after"
            android:layout_weight="5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/example_description" />

            <ImageButton
                android:id="@+id/btn_edit_description"
                android:layout_width="@dimen/profile_width_edit"
                android:layout_height="@dimen/profile_height_edit"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:contentDescription="@string/edit"
                android:scaleType="fitCenter"
                android:src="@drawable/edit" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/con_friends"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        tools:ignore="InvalidId">

        <TextView
            android:id="@+id/text_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/friends" />

        <TextView
            android:id="@+id/text_count_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/count_friends" />

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="4">

        </GridView>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/con_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="horizontal"
        tools:ignore="InvalidId">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@android:drawable/btn_star" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />


</LinearLayout>