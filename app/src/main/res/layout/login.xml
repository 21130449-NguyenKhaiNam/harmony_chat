<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/primary_blue">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/width_logo"
        android:layout_height="@dimen/height_logo"
        android:layout_marginTop="@dimen/access_logo_margin_top"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/logo_black" />

    <EditText
        android:id="@+id/editUsername"
        style="@style/input_style"
        android:drawableLeft="@drawable/baseline_account_circle_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:inputType="text"
        android:layout_marginTop="60dp"
        android:text="Tên đăng nhập" />


    <EditText
        android:id="@+id/editPassword"
        style="@style/input_style"
        android:drawableLeft="@drawable/baseline_app_registration_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:textColorHint="#fff"
        android:hint="Mật khẩu" />

    <TextView
        android:id="@+id/forgetPasswordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:text="Quên mật khẩu?" />


    <Button
        android:id="@+id/loginBtn"
        android:background="@drawable/long_button"
        style="@style/long_input_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Đăng nhập" />

</LinearLayout>