<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="input_style">
        <item name="android:background">@drawable/input_container</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="long_input_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/long_button</item>
    </style>

    <style name="input_search_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/input_container_small</item>

    </style>

    <style name="second_long_input_style">
        <item name="android:background">@drawable/second_long_button</item>
        <item name="android:textColor">@color/primary_pink</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="social_button_style">
        <item name="android:background">@drawable/social_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>

    </style>


</resources>